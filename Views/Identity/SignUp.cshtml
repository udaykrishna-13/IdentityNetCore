@model SignUpViewModel
 
@{
    ViewData["Title"] = "Sign Up";
    var roles= new List<string>(){ "Member","Administrator"};
}

<form asp-controller="Identity" asp-action="SignUp" method="post">
    @Html.ValidationSummary()
    <div class="form-group col-4">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group col-4">
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Department">Department</label>
        <input type="text" asp-for="Department" class="form-control" />
    </div>
    <div class="form-group col-4">
        @Html.DropDownListFor(s => s.Role, roles.Select(x => new SelectListItem() { Text = x, Value = x }), "Roles", null);
    </div>
    <div class="form-group col-4">
        <button type="submit" class="btn btn-info">Signup!</button>
    </div>
    <div class="alert alert-info">
        if already signed up please <a asp-action="SignIn">Sign in</a>
    </div>
</form>
