@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<form class="modal-content" asp-controller="Identity" asp-action="SignIn" method="post">
    @Html.ValidationSummary()
    <div class="container-sm text-center">
        <img src="~/Images/img_avatar2.png" class="img-thumbnail rounded-circle" style="width:30%" id="DefaultProfileImage"/>
    </div>
    <div class="container-sm">
        <div class="form-group">
            <label asp-for="Email"><b>Email</b></label>
            <input asp-for="Email" placeholder="Email/Username" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"><b>Password</b></label>
            <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>
                <input type="checkbox" asp-for="RememberMe" /><b> Remeber Me</b>
            </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Sign In</button>
        </div>
    </div>
</form>